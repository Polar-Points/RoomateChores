<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFrag">

    <fragment
        android:id="@+id/my_chores_tab"
        android:name="dang.marty.roomatechores.presentation.fragments.MyChoresFrag"
        android:label="fragment_my_chores"
        tools:layout="@layout/fragment_my_chores" />

    <fragment
        android:id="@+id/settings_tab"
        android:name="dang.marty.roomatechores.presentation.SettingsFrag"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/loginFrag"
        android:name="dang.marty.roomatechores.presentation.fragments.LoginFrag"
        android:label="login_fragment"
        tools:layout="@layout/login_fragment" >
        <action
            android:id="@+id/action_loginFrag_to_registerFrag"
            app:destination="@id/registerFrag"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/wait_anim"
            app:popEnterAnim="@anim/wait_anim"
            app:popExitAnim="@anim/slide_in_right"
             />
        <action
            android:id="@+id/action_loginFrag_to_my_chores_tab"
            app:destination="@id/my_chores_tab" />
    </fragment>
    <fragment
        android:id="@+id/registerFrag"
        android:name="dang.marty.roomatechores.presentation.fragments.RegisterFrag"
        android:label="RegisterFrag" >
        <action
            android:id="@+id/action_registerFrag_to_my_chores_tab"
            app:destination="@id/my_chores_tab" />
        <action
            android:id="@+id/action_registerFrag_to_loginFrag"
            app:destination="@id/loginFrag"
            app:enterAnim="@anim/nav_default_pop_enter_anim"
            app:exitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/admin_tab"
        android:name="dang.marty.roomatechores.presentation.fragments.AdminFragment"
        android:label="fragment_admin"
        tools:layout="@layout/fragment_admin" />

</navigation>